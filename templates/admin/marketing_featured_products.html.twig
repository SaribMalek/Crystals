{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Featured Products{% endblock %}

{% block main %}
    <section class="admin-recent-panel">
        <div class="panel-head">
            <h4>Featured Products</h4>
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('index') }}" class="panel-link">Manage Products</a>
        </div>
        {% if products is empty %}
            <p class="empty-state">No featured products yet.</p>
        {% else %}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr><th>ID</th><th>Name</th><th>Price</th><th>Stock</th><th>Sale</th></tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>#{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>${{ product.price|number_format(2, '.', ',') }}</td>
                            <td>{{ product.stock }}</td>
                            <td>{{ product.isSale ? 'Yes' : 'No' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </section>
{% endblock %}
